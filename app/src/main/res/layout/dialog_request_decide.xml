<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50.0dip">

    <LinearLayout
        android:id="@+id/item_view_true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/textview_rect">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300.0dip">

            <TextView
                android:id="@+id/item_decide_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5.0dip"
                android:text="TITLE"
                android:textColor="#f0f0f0"/>

            <ImageView
                android:id="@+id/item_decide_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:background="@drawable/dummy_profile"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/item_decide_mapview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도 보기"
                android:background="@drawable/textview_rect"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingTop="30dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/item_decide_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="CONTENT"
                    android:textColor="#f0f0f0"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_decide_contentsarea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_decide_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Title"
                    android:textColor="#f0f0f0"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_decide_contentsarea"
                android:layout_marginTop="20dp"

                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_decide_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Content"
                    android:textColor="#f0f0f0"
                    android:singleLine="true"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="70.0dip">

            <Button
                android:id="@+id/item_decide_ok"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/ico_check" />

            <View
                android:layout_width="30.0dip"
                android:layout_height="0.0dip" />

            <Button
                android:id="@+id/item_decide_cancle"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/ico_cancle" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_decide_eventIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INDEX"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>